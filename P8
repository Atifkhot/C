// Simple Calculator using switch case 
#include <stdio.h>

void main()
{
    float a,b,result;
    int operation;
    
    printf("Enter a : ");
    scanf("%f",&a);
    
    printf("\nEnter b : ");
    scanf("%f",&b);
    
    printf("\n1.Add\n2.Sub\n3.Mul\n4.Div\nEnter operation number : ");
    scanf("%d",&operation);
    
        switch(operation)
         {
        case 1 :
        result=a+b;
        printf("%f",result);
        break;
        
        case 2 :
        result=a-b;
        printf("%f",result);
        break;
        
        case 3 :
        result=a*b;
        printf("%f",result);
        break;
        
        case 4 :
        result=a/b;
        printf("%f",result);
        break;
        
        default :
        printf("\nSyntax Error");
         }
}

OUTPUT

Enter a : 5
Enter b : 5
1.Add
2.Sub
3.Mul
4.Div
Enter operation number : 3
25.000000
