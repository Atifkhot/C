#include <stdio.h>

void main()

{
    float l;
    float b;
    float area;
    float perimeter;
    
    printf("Enter l :");
    scanf("%f",&l);
    
    printf("\nEnter b :");
    scanf("%f",&b);
    
    area=l*b;
    perimeter=2*(l+b);
    
    printf("\narea=%f",area);
    printf("\nperimeter=%f",perimeter);
    
}
