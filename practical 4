#include <stdio.h>

void main()

{
    float l;
    float b;
    float area;
    float perimeter;
    
    printf("Enter l :");
    scanf("%f",&l);
    
    printf("\nEnter b :");
    scanf("%f",&b);
    
    area=l*b;
    perimeter=2*(l+b);
    
    printf("\narea=%f",area);
    printf("\nperimeter=%f",perimeter);
    
}


************

#include<stdio.h>
#define PI 3.14

void main()
{
    float r;
    float area;
    float circumference;
    
    printf("Enter r :");
    scanf("%f",&r);
    
    area=PI*r*r;
    circumference=2*PI*r;
    
    printf("\narea=%f",area);
    printf("\ncircumference=%f",circumference);
    
}
